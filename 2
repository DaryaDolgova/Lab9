#include <iostream>

using namespace std;

int main () 
{
setlocale(LC_ALL, "Russian");
  char C;
  int N;
  cout << "Введите символ ";
  cin >> C;
  cout << "Введите цифровую команду ";
  cin >> N;
  cout << "Введите направление"; 
  switch (N) 
  {
    case 1: switch (C) 
    {
        case 'E': cout << "N"; break;
        case 'S': cout << "E"; break; 
   		case 'N': cout << "W"; break;
   		case 'W': cout << "S"; break;
    } break ;
	case -1: switch (C) {
	    case 'W': cout << "N"; break;
   		case 'N': cout << "E"; break;
   		case 'S': cout << "W"; break;  
   	    case 'E': cout << "S"; break;
	} break;
	case 0: switch (C) {
   		case 'N': cout << "N"; break;
   		case 'E': cout << "E"; break;
   		case 'W': cout << "W"; break;
   		case 'S': cout << "S"; break;  
	} break;
   }
      cout << endl;

   return 0;

}
